# GitHub Configuration
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here

# Application Configuration
PORT=3000
NODE_ENV=development

# Repository Configuration (where issues will be created)
GITHUB_OWNER=your_github_username_or_org
GITHUB_REPO=your_repository_name

# Webhook Behavior Configuration
# Strategy for handling alerts across different branches:
# - main_only: Only create issues for alerts in the main branch (default)
# - main_with_branch_updates: Create issues for main branch, update when alerts appear in other branches
# - all_branches: Create separate issues for alerts in any branch
BRANCH_ALERT_STRATEGY=main_only

# The main branch to always track (default: main)
MAIN_BRANCH=main

# DEPRECATED: Use BRANCH_ALERT_STRATEGY instead
# Whether to track alerts that appear in non-main branches (default: false)
TRACK_BRANCH_ALERTS=false

# DEPRECATED: Use BRANCH_ALERT_STRATEGY instead
# Whether to create issues for alerts in any branch (default: false)
CREATE_ISSUES_FOR_ALL_BRANCHES=false

# Reconciliation Configuration
# Reconciliation synchronizes existing code scanning alerts with issues on startup
# Enable or disable reconciliation on startup (default: true)
ENABLE_RECONCILIATION=true

# Delay in milliseconds before running reconciliation after server starts (default: 1000)
RECONCILIATION_DELAY_MS=1000
